- content_for :packs, 'cloudinary-upload'
- content_for :no_css_packs, 'cloudinary-upload'

= form_with model: product do |f|
  - if product.errors.any?
    #error_explanation
      %h2 #{pluralize(product.errors.count, 'error')} prohibited this product from being saved:
      %ul
        - product.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.hidden_field :photo_cache
    .custom-file
      = f.label :photo, class: 'custom-file-label'
      = f.file_field :photo, class: 'custom-file-input'
    = f.label :name, class: 'col-form-label'
    = f.text_field :name, class: 'form-control'
    = f.label :price, class: 'col-form-label'
    = f.text_field :price, class: 'form-control'
    = f.label :description, class: 'col-form-label'
    = f.text_area :description, rows: 15, id: 'product-description-area', class: 'form-control'
    = f.label :order, class: 'col-form-label'
    = f.text_field :order, class: 'form-control'

    %br/
    = f.button 'Submit', class: 'btn btn-primary'
